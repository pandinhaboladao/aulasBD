create database mercado;

create table cliente(
codigo_cliente int primary key not null,
nome varchar(150),
cpf int,
celular numeric
);

create table funcionario(
codigo_funcionario int primary key not null,
nome varchar (150),
cpf int,
celular numeric,
cargo varchar (50)
);

create table venda(
codigo_venda int primary key not null,
produto varchar(150),
nota_fiscal int,
valor_total numeric(10,2)
);

alter table cliente change celular celular int;
alter table funcionario change celular celular int;

